<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                font_size: "20sp"
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    size_hint: 0.3, 0.6
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    text: "Login"
                    on_press: root.log_in_success(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            padding: 15, 15
            spacing: 10, 0
            size_hint: 0.1, 0.1
            Button:
                color: 0.1, 0.7, 1, 1
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                text: "Forgot password?"
            Button:
                color: 0.1, 0.7, 1, 1
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                text: "Sign Up"
                on_press: root.sign_up()

<SignupScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            font_size: "20sp"
            text: "Sign up headline"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            password: True
            hint_text: "Password"
        RelativeLayout:
            Button:
                size_hint: 0.3, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                text: "Sign up"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignupScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            font_size: "20sp"
            text: "You signed up successfully."
        Button:
            text: "Go to login page"
            on_press: root.log_in()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        RelativeLayout:
            ImageButton:
                size_hint: 0.25, 0.25
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
        Label:
            font_size: "20sp"
            text: "How do you feel?"
        TextInput:
            size_hint: 0.3, 0.6
            id: feeling
            hint_text: "Things to try: happy, sad, unloved, etc."
        Button:
            text: "Enlighten me!"
            on_press: root.enlighten(root.ids.feeling.text)
        ScrollView:
            Label:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                id: quote
                text: ""


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignupScreen:
        name: "sign_up_screen"
    SignupScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
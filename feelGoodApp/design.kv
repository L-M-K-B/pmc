<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignupScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up headline"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign up"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignupScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "You signed up successfully."
        Button:
            text: "Go to login page"
            on_press: root.log_in()

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignupScreen:
        name: "sign_up_screen"
    SignupScreenSuccess:
        name: "sign_up_screen_success"